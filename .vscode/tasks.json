{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar Pawn",
      "type": "shell",
      "command": "${workspaceFolder}\\pawno\\pawncc.exe",
      "args": [
        "${file}",
        "-o${fileDirname}\\${fileBasenameNoExtension}.amx",
        "-;+",
        "-(+"
      ],
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
